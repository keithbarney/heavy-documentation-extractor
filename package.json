{
  "name": "heavy-documentation-extractor",
  "version": "1.0.0",
  "description": "Extract text from Figma sections to markdown with preserved hierarchy",
  "scripts": {
    "dev": "esbuild code.ts --bundle --target=es6 --outfile=dist/code.js --watch",
    "build": "esbuild code.ts --bundle --target=es6 --outfile=dist/code.js --minify",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.98.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.0"
  }
}
